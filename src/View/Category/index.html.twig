{% extends 'layout.html.twig' %}

{% block content %}
    <h1>Category</h1>
    <ul>
        {% for category in categories %}
            <li><a href="/category/{{ category.id }}">{{ category.id }}. {{ category.title }}</a></li>
        {% else %}
            <li>Nothing to display</li>
        {% endfor %}
    </ul>
    <a href="/category/add">Ajouter</a>
{% endblock %}
